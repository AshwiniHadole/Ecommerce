<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
autoReload="true"
internalLogLevel="Trace"
internalLogFile="D:\New Data (01 May 2022)\Ecommerce\EcommerceAPI\EcommerceAPI\NLog\nlog\internalLog.txt">



	<targets>
		<target xsi:type="Database"
		name="dbTarget"
		connectionString="server=ASPL-IND-L-013;Initial Catalog=Ecom;Integrated Security=True;"
		commandText="INSERT INTO NLogsEcom(CreatedOn,Message,Level,Exception,StackTrace,Logger,Url) VALUES (@datetime,@msg,@level,@exception,@trace,@logger,@url)">
			<parameter name="@datetime" layout="${date}" />
			<parameter name="@msg" layout="${message}" />
			<parameter name="@level" layout="${level}" />
			<parameter name="@exception" layout="${exception}" />
			<parameter name="@trace" layout="${stacktrace}" />
			<parameter name="@logger" layout="${logger}" />
			<parameter name="@url" layout="${aspnet-request-url}" />
		</target>
	</targets>
	<rules>
		<logger name="*" minlevel="Trace" writeTo="dbTarget" />
	</rules>

</nlog>